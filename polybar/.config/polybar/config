[colors]
; Basic colors
background = #222D32
foreground = #D8DEE9
primary    = #ffb52a
secondary  = #e60053
urgent     = #bd2c40
active     = #D8DEE9

; Sub-module colors
power = ${colors.urgent}

[bar/primary]
inherit = bar/base
monitor = DVI-I-1

[bar/side]
inherit        = bar/base
monitor        = DVI-D-0
modules-center =
modules-right  =
tray-position  =

[bar/base]
;monitor       = ${env:MONITOR:HDMI-1}
monitor-strict = true
width          = 100%
height         = 35
offset-x       = 0
offset-y       = 0
radius         = 0.0
fixed-center   = true
top            = true

background = ${colors.background}
foreground = #eee

underline-size  = 2
underline-color = #eee

line-size  = 3
line-color = #f00

border-size  = 0
border-color = ${colors.foreground}

padding-left  = 2
padding-right = 2

module-margin-left  = 1
module-margin-right = 1

font-0 = FontAwesome:size=11;3
font-1 = Inconsolata for Powerline:weight=bold:pixelsize=10;3

modules-left   = i3
modules-center = xwindow
modules-right  = date volume eth powermenu

tray-position     = right
tray-padding      = 2
;tray-transparent = true
;tray-background  = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up   = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up   = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/xwindow]
type  = internal/xwindow
label = %title:0:50:...%

[module/i3]
type           = internal/i3
index-sort     = true
enable-click   = true
enable-scroll  = false
warping-scroll = false
reverse-scroll = false
fuzzy-match    = true
format         = <label-mode><label-state>

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding     = 2
;label-mode-foreground = #000
;label-mode-background =

;focused                 = Active workspace on focused monitor
label-focused            = %index% %icon%
label-focused-background = ${colors.background}
label-focused-underline  = #ddd
;label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding    = 2

;unfocused              = Inactive workspace on any monitor
label-unfocused         = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}

;visible                 = Active workspace on unfocused monitor
label-visible            = ${self.label-focused}
label-visible-background = ${self.label-focused-background}
label-visible-underline  = ${self.label-focused-underline}
label-visible-padding    = ${self.label-focused-padding}

;urgent                 = Workspace with urgency hint set
label-urgent            = ${self.label-focused}
label-urgent-background =
label-urgent-padding    = ${self.label-focused-padding}

ws-icon-0       = "code;"
ws-icon-1       = "term;"
ws-icon-2       = "web;"
ws-icon-default = ""

[module/eth]
type      = internal/network
interface = enp5s0
interval  = 3.0

format-connected-underline         = #55aa55
format-connected-prefix-foreground = ${colors.foreground}
label-connected =  %local_ip%
label-disconnected = 

;format-disconnected           =
;format-connected-prefix       =
;format-disconnected           = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected            = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground}

[module/date]
type     = internal/date
interval = 5

date     = "%d/%m/%Y"
date-alt =

time     = "%H:%M"
time-alt =

format-prefix            = 
format-prefix-foreground = ${colors.foreground}
format-underline         =

label = %date% %time%

[module/volume]
type = internal/volume

format-volume           = <ramp-volume> <bar-volume>
format-muted            =  
ramp-volume-0           = 
ramp-volume-1           = 
ramp-volume-2           = 
ramp-volume-3           = 
ramp-volume-foreground  = ${colors.active}
bar-volume-width = 6
bar-volume-indicator =
bar-volume-fill = 
bar-volume-fill-font = 3
bar-volume-fill-foreground = ${colors.foreground}
bar-volume-empty = 
bar-volume-empty-font = 3
bar-volume-empty-foreground = ${colors.secondary}

[module/powermenu]
type                       = custom/menu
label-active-font          = 1
format-spacing             = 1
label-open                 = 
label-open-foreground      = ${colors.power}
label-close                = 
label-close-foreground     = ${colors.power}
label-separator            = |
label-separator-foreground = ${colors.secondary}

menu-0-0            = reboot
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec       = reboot
menu-0-1            = power off
menu-0-1-foreground = ${colors.foreground}
menu-0-1-exec       = poweroff

[settings]
screenchange-reload     = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border     = over

[global/wm]
margin-top    = 5
margin-bottom = 5

